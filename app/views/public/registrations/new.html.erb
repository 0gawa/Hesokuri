<%=render 'layouts/public'%>
<div class="container">
<div class="row justify-content-center bg-light bg-circle">
    <div class="col-lg-10 mx-lg-0 mx-1">
      <h1 class="text-center">新規登録</h1>

      <%= render "public/shared/error_messages"%>

      <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
        <div class="field mb-4 col-10 offset-1">
          <%= f.label :email, "メールアドレス", class: "pb-2 ps-2" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field mb-4 col-10 offset-1">
          <%= f.label :name, "名前", class: "pb-2 ps-2" %><br />
          <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="field mb-4 col-10 offset-1">
          <span class="ps-2 pb-2">性別</span><br>
          <%= f.radio_button :sex, :man, checked: "checked", class:"ms-2" %>
          <%= f.label :sex_man, "男性", class:"pe-3 " %>
          <%= f.radio_button :sex, :woman %>
          <%= f.label :sex_woman, "女性", class:"pe-3" %>
          <%= f.radio_button :sex, :others%>
          <%= f.label :sex_others, "その他" %>
        </div>

        <div class="field mb-4 col-10 offset-1">
          <%= f.label :age, "年齢", class: "pb-2 ps-2" %><br />
          <%= f.number_field :age, autocomplete: "age", in: 0..130, class: "form-control" %>
        </div>

        <div class="field mb-4 col-10 offset-1">
          <%= f.label :job, "職業", class: "pb-2 ps-2" %><br />
          <%= f.select :job, options_for_select(User.jobs.map { |k, v| [t("enums.user.job.#{k}"), k] }), { include_blank: "職業を選択してください" }, { class: "form-select" } %>
        </div>

        <div class="field mb-4 col-10 offset-1">
          <span class="ps-2 pb-2">喫煙をしますか？</span><br>
          <%= f.radio_button :is_smoker, true, class:"ms-2" %>
          <%= f.label :is_smoker_true, "はい", class:"pe-3 " %>
          <%= f.radio_button :is_smoker, false %>
          <%= f.label :is_smoker_false, "いいえ", class:"" %>
        </div>

        <div class="field mb-4 col-10 offset-1">
          <%= f.label :password, "パスワード", class:"pb-2 ps-2" %>
          <% if @minimum_password_length %>
          <span>（<%= @minimum_password_length %>文字以上にしてください）</span>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control"%>
        </div>

        <div class="field mb-4 col-10 offset-1">
          <%= f.label :password_confirmation, "パスワード（確認）", class:"pb-2 ps-2" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"%>
        </div>

        <div class="actions mb-4 text-center">
          <%= f.submit "新規登録", class: "btn btn-dark col-5" %>
        </div>
      <% end %>

        <p class="pb-4 text-center">アカウントを作成すると、<%=link_to "利用規約", terms_of_use_path%>および<%=link_to "プライバシーポリシー", privacy_path%>
        に同意するものとします。</p>

      <%= render "public/shared/links" %>
    </div>
</div>
</div>

