
<%=render 'layouts/public'%>
<div class="container">
<div class="row justify-content-center">

    <div class="col-11 col-md-7 py-5 bg-light bg-circle">
        <h2 class="text-center">メールアドレスの変更</h2>

        <%= render "public/shared/error_messages", resource: resource %>

        <%=form_with model: @user, url: user_confirmation_path, method: :post, class: "row justify-content-center" do |f| %>
          <div class="field mt-4 col-10">
            <%= f.label :email, "メールアドレス", class: "pb-1" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: "form-control" %>
          </div>

          <div class="actions mt-4 text-center">
            <%= f.submit "変更受付メールを送信する", class: "btn btn-dark col-10" %>
          </div>

          <div class="mt-5 col-10">
            <%= render "public/shared/links" %>
          </div>
        <% end %>
    </div>

  </div>
</div>
