<%=render 'layouts/public'%>
<div class="container">
<div class="row justify-content-center bg-light bg-circle">
    <div class="col-lg-10 mx-lg-0 mx-1">
        <h1 class="text-center">支出一覧</h1>

        <div class="row mt-3">
            <div class="col-10 offset-1 pt-2">
            <%if @spends.count != 0%>
                <%@spends.each do |spend|%>
                    <div class="bg-info bg-radius-10 mb-3 p-2">
                        <div class="mb-1"><span class="pe-1"><%=spend.spend_genre.name%></span>|
                        <span class="ps-1"><%= l spend.created_at, format: :short %></span></div>
                        <div class="fs-4 text-center"><%=spend.money%>円</div>
                    </div>
                <%end%>
            <%else%>
                <p class="py-3 text-center">まだ記録がありません。</p>
            <% end %>
            </div>
        </div>
    </div>
</div>
</div>