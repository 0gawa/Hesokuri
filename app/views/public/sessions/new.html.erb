<%=render 'layouts/public'%>

<div class="container">
<div class="row d-flex justify-content-center">

    <div class="col-11 col-md-5 py-5 bg-light bg-circle mt-5">
      <h1 class="text-center">ログイン</h1>
      <%= form_with model: @user, url: session_path(resource_name), class:"row mt-5 justify-content-center"  do |f| %>
        <div class="field col-10">
          <%= f.label :email, "メールアドレス", class: "pb-1" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field mt-4 col-10">
          <%= f.label :name, "名前", class: "pb-1" %><br />
          <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="field mt-4 col-10">
          <%= f.label :password, "パスワード", class: "pb-1" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field mt-4 col-10">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, "ログイン情報を保存する" %>
          </div>
        <% end %>

        <div class="actions mt-4 text-center">
          <%= f.submit "ログイン", class: "btn btn-dark col-10" %>
        </div>

        <div class="mt-5 col-10">
          <% if flash[:notice]%>
            <p class="text-center mb-1 text-danger"><%= flash[:notice] %></p>
          <%end%>
          <%= render "public/shared/links" %>
        </div>

      <% end %>

    </div>
</div>
</div>