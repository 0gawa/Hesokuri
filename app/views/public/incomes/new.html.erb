<%=render 'layouts/public'%>
<div class="container">
<div class="row justify-content-center bg-light bg-circle">
    <div class="col-lg-10 mx-lg-0 mx-1">
        <h1 class="text-center">収入の入力</h1>

        <%=render 'public/shared/flash'%>

        <div class="row mt-3">
        <%=form_with model: @income, url: incomes_path, local: true do |f|%>
            <div class="field mb-4 col-10 offset-1">
                <%= f.label :money, "収入額", class: "pb-2 ps-2" %><br />
                <%= f.number_field :money, autocomplete: "money", class: "form-control" %>
            </div>
            <div class="field mb-4 col-10 offset-1">
                <%= f.label :comment, "メモ", class: "pb-2 ps-2" %><br />
                <%= f.text_area :comment , class: "form-control", rows: 5 %>
            </div>

            <div class="actions mb-4 text-center">
                <%=f.submit "登録する", class: "btn btn-success col-5"%>
            </div>
        <%end%>
        </div>
        
    </div>
</div>
</div>