<%=render 'layouts/public'%>
<div class="container">
<div class="row justify-content-center bg-light bg-circle">
    <div class="col-lg-10 mx-lg-0 mx-1">
        <h1 class="text-center">収入一覧</h1>

        <div class="row mt-3">
            <div class="col-10 offset-1 pt-2">
                <%@incomes.each do |income|%>
                    <div class="bg-info box-circle mb-3 p-2">
                        <div class="mb-1"><span class="pe-1"><%=income.comment%></span>|
                        <span class="ps-1"><%= l income.created_at, format: :short %></span></div>
                        <div class="fs-4 text-center"><%=income.money%>円</div>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
</div>
</div>