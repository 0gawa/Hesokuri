<%=render 'layouts/admin'%>

<div class="container">
<div class="row justify-content-center">
  <div class="col-10">
    <h1>管理者ログイン</h1>

    <%= render "admin/shared/error_messages"%>

    <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
      <div class="field mt-4 col-10">
        <%= f.label :email, "メールアドレス", class: "pb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="field mt-4 col-10">
        <%= f.label :admin_id, "管理者ID", class: "pb-2" %><br />
        <%= f.text_field :admin_id, autocomplete: "admin_id", class: "form-control" %>
      </div>

      <div class="field mt-4 col-10">
        <%= f.label :password, "パスワード", class: "pb-2" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="actions mt-4">
        <%= f.submit "ログイン", class: "btn btn-dark col-6 offset-2" %>
      </div>
    <% end %>

    <%= render "admin/shared/links" %>

  </div>
</div>
</div>